{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": {
        "$ref": "#/definitions/OstimConfigAnimation"
    },
    "definitions": {
        "FurnitureTypes": {
            "description": "ostim supported furniture\nthe list can be changed right now you can find it ostim scripts: OStim NG - OSA Overhaul and API Next Gen\\Scripts\\Source\\OSexIntegrationMain.psc",
            "enum": [
                "bed",
                "bench",
                "chair",
                "cookingpot",
                "shelf",
                "table",
                "wall"
            ],
            "type": "string"
        },
        "OstimConfigAnimation": {
            "description": "Full object represents whole animation serie with multiple stages",
            "properties": {
                "actorsKeyword": {
                    "description": "keyword represents what set of actors it uses: fm, ffm, ff, fmm, etc...",
                    "type": "string"
                },
                "folders": {
                    "$ref": "#/definitions/OstimConfigAnimationFolders"
                },
                "hkxAnnotations": {
                    "$ref": "#/definitions/Record<string,HkxAnnoation>"
                },
                "name": {
                    "description": "animation name",
                    "type": "string"
                },
                "stages": {
                    "items": {
                        "$ref": "#/definitions/OstimConfigAnimationStage"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "OstimConfigAnimationFolders": {
            "description": "Additional information to not parse each time path and get all this info. Instead of it store it in config",
            "properties": {
                "animName": {
                    "type": "string"
                },
                "moduleName": {
                    "type": "string"
                },
                "posFolderName": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "OstimConfigAnimationMeta": {
            "description": "Scene meta configuration, all properties will be rendered in scene file in meta tag",
            "properties": {
                "furniture": {
                    "$ref": "#/definitions/FurnitureTypes"
                },
                "noRandomSelection": {
                    "type": "boolean"
                },
                "tags": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        },
        "OstimConfigAnimationStage": {
            "description": "In slal there is term stage, each animation series have multiple stages which can be quite different in terms of actions/speed etc\nThis object represents all needed information to create scene file",
            "properties": {
                "actions": {
                    "items": {
                        "$ref": "#/definitions/OstimSceneAction"
                    },
                    "type": "array"
                },
                "actors": {
                    "items": {
                        "$ref": "#/definitions/OstimSceneActor"
                    },
                    "type": "array"
                },
                "fileName": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "meta": {
                    "$ref": "#/definitions/OstimConfigAnimationMeta"
                },
                "noRandomSelection": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "OstimSceneAction": {
            "properties": {
                "actor": {
                    "type": "number"
                },
                "performer": {
                    "type": "number"
                },
                "target": {
                    "type": "number"
                },
                "type": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "OstimSceneActor": {
            "properties": {
                "animationIndex": {
                    "type": "number"
                },
                "autoTransitions": {
                    "$ref": "#/definitions/Record<string,string>"
                },
                "expressionAction": {
                    "type": "number"
                },
                "expressionOverride": {
                    "type": "string"
                },
                "feetOnGround": {
                    "type": "boolean"
                },
                "intendedSex": {
                    "enum": [
                        "female",
                        "male"
                    ],
                    "type": "string"
                },
                "lookDown": {
                    "type": "number"
                },
                "lookLeft": {
                    "type": "number"
                },
                "lookRight": {
                    "type": "number"
                },
                "lookUp": {
                    "type": "number"
                },
                "noStrip": {
                    "type": "boolean"
                },
                "scale": {
                    "type": "number"
                },
                "scaleHeight": {
                    "type": "number"
                },
                "sosBend": {
                    "type": "number"
                },
                "tags": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "type": {
                    "default": "'npc'",
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Record<string,HkxAnnoation>": {
            "type": "object"
        },
        "Record<string,string>": {
            "type": "object"
        }
    },
    "type": "object"
}