{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "~bridge/*": [
                "src/apps/bridge/*"
            ],
            "~common/*": [
                "src/common/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/logic/porting-animations.ts"
    ]
}