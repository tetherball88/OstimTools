{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ES6",
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "~packs/*": [
                "src/apps/packs/*"
            ],
            "~connectAddon/*": [
                "src/apps/connectAddon/*"
            ],
            "~common/*": [
                "src/common/*"
            ],
        }
    },
    "include": [
        "src/**/*"
, "configs/connectAddon/config.ts"    ],
    "exclude": [
        "src/logic/porting-animations.ts"
    ]
}